if blog
	/* Blog and Category */
	.blog
	.archive
		article
			margin-bottom 30px
			
			.entry-body
				padding 30px
				background grey-colour
				
				.entry-title
					margin 0 0 10px
					font-size 2em
				
				.entry-meta
					margin-bottom 15px
					
					li
						font-weight 600

			&:last-of-type
				margin-bottom 0
	
	/* Single */
	.single
		article
			.entry-content
				img
					margin: 30px 0
	
	/* Blog Page Navigation */
	.pagination
		padding-top 30px
		text-align center
		
		.page-numbers
			padding 12px 20px
			text-align center
			display inline-block
			border 1px solid default-colour
			margin-right 10px
			
			&.current
			&:hover
				background: default-colour
				color white-colour
			
			&:last-child
				margin-right 0

	/* Post Meta Area */
	.post-meta-area
		> div
			margin-top 30px