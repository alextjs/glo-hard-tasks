// Faq

.faq {
	margin-bottom: 20px;
}
.faq.faq-link .question-wrapper {
	display: block;
	padding: 25px 85px 22px 22px;
	background: secondary-colour;
	position: relative;
	border: 1px solid blue-colour;
	cursor: pointer
}
.faq.faq-link .question-wrapper .question {
	color: white-colour;
	font-size: 1.14em;
	transition: 0.6s;
	font-weight: 500;
}
.faq.faq-link .question-wrapper:after {
	content: "\ea4c";
	font-family: "remixicon";
	height: 100%;
	width: 68px;
	text-align: center;
	line-height: 68px;
	color: blue-colour;
	position: absolute;
	top: 0;
	right: 0;
	font-size: 1.8em;
	transition: 0.6s;
	border-left: 1px solid blue-colour;
}
.faq.faq-link .answer-wrapper .answer {
	background: default-colour;
	padding: 20px 22px;
	border: 1px solid #000;
	border-top: none;
}
.faq.faq-link.active .question-wrapper,
.faq.faq-link:hover .question-wrapper {
	background: #000;
	border: 1px solid pink-colour
}
.faq.faq-link.active .question-wrapper .question,
.faq.faq-link:hover .question-wrapper .question {
	color: #fff;
}
.faq.faq-link.active .question-wrapper:after,
.faq.faq-link:hover .question-wrapper:after {
	transition: all 400ms ease-in-out
	content: "\ea76";
	color: pink-colour;
	border-left: 1px solid pink-colour
}
.faq:last-child {
	margin-bottom: 0 !important;
}

