/* Buttons */

body
	overflow-x: hidden


.btn
	padding 18px 50px
	border-width 2px
	border-style solid
	display inline-block
	normalize-line-height()

.btn-default
	background white-colour
	border: none
	color default-colour
		
	&:hover
		background blue-colour
		border-color blue-colour
		color default-colour
		border: none

	
	&.btn-border
		color default-colour
		
		&:hover
			background default-colour
			border-color default-colour
			color white-colour

.btn-primary
	background blue-colour
	border none
	color black
	
	&:hover
		background pink-colour


.btn-secondary
	background secondary-colour
	border-color secondary-colour
	color white-colour
	
	&:hover
		background default-colour
		border-color default-colour
		color white-colour
		
	&.btn-border
		color secondary-colour

		&:hover
			background secondary-colour
			border-color secondary-colour
			color white-colour
			
.btn-white
	background white-colour
	border-color white-colour
	color default-colour
	
	&:hover
		background default-colour
		border-color default-colour
		color white-colour
		
	&.btn-border
		color white-colour

		&:hover
			background secondary-colour
			border-color secondary-colour
			color white-colour
			
.btn-border
	background transparent

.btn-block
	display block
	text-align center

input[type="submit"]
input[type="button"]
button
	@extends .btn
	@extends .btn-default
	transition main-transition-seconds

/* Move Up Toggle */
#move-up-toggle
	position fixed
	bottom 10px
	right 10px
	color white-colour
	height 50px
	width 50px
	line-height 52px
	transition main-transition-seconds
	text-align center
	background default-colour
	display none
	z-index 997
	box-shadow: 0 0 15px 0 rgba(0, 0, 0, 0.15)

	&:hover
		background blue-colour
		color: default-colour

/* Input Tooltip */
.tooltip
	position relative

	.tooltip-text
		visibility hidden
		background-color #333
		color white-colour
		text-align center
		border-radius 6px
		padding 5px 10px
		position absolute
		z-index 1
		bottom 109%
		left 30%
		margin-left -60px
		opacity 0
		transition opacity 0.3s

		&:after
			content ""
			position absolute
			top: 100%
			left 50%
			margin-left -5px
			border-width 5px
			border-style solid
			border-color #333 transparent transparent transparent

	&:hover
		.tooltip-text
			visibility visible
			opacity 1

/* Testimonial */
.testimonial
	&.style
		padding 30px
		background default-colour
		
		.heading
			color white-colour

		.content
			color white-colour

		.details
			span
				&.name
				&.date
					font-weight 600
					color white-colour

	.details
		overflow hidden

		span
			float left
			margin-right 20px
			
			&.rating
				color #FD0
			
			&:last-of-type
				margin-right 0

/* Title Bar */
#title-bar
	padding-top 60px
	padding-bottom 60px

	.title-bar-heading
		margin 0
		color white-colour
		
	.title-bar-subheading
		color white-colour
		margin-top 20px
		normalize-line-height()
		
	.breadcrumb
		margin-top 25px
		
	.post-details
		margin-bottom 25px

/* Breadcrumb */
.breadcrumb
	overflow hidden
	display inline-block
	
	li
		display inline-block
		float left
		margin 0
		
		a
			color white-colour
			
			&:hover
				color default-colour
		
		&.active
			color white-colour
			font-weight 600
			
	> li + li:before
		content "/\00a0"
		display inline-block
		float left
		margin-right 0
		padding 0 7px 0 10px
		color #CCC
		margin-top -2px

/* Blog Post Details */
.post-details
	li
		color white-colour

/* Blog Share */
.share-post
	padding 20px 30px
	background default-colour

	.heading
		margin 12px 0
		color white-colour
		
	ul
		li
			a
				height 50px
				width 50px
				line-height 58px
				background white-colour
				color default-colour
				border-radius 50%
				display block
				text-align center
				
				&:hover
					background secondary-colour
					color white-colour

				i
					color inherit
					margin-right 0

/* Blog Articles */
.more-articles
	padding 30px 30px 0
	background grey-colour
	
	.heading
		font-size 2.1em
		margin 0 0 30px
	
	.article
		margin-bottom 30px

		.article-heading
			margin 0 0 5px
			
			a
				color secondary-colour
				
				&:hover
					color default-colour
		
		.date
			color #AAA
			
		.content
			normalize-line-height()
			margin-top 10px

/* Previous / Next Post Buttons */
.prev-next-post-button
	.title
		font-size 1.3em
		font-weight 600
		display block
		margin-bottom 10px
	
	&:hover
		color secondary-colour

/* Action Boxes */
.action-box
	text-align center
	padding 60px 40px
	margin 30px 0
	
	&.bg-c-default
		.btn:hover
			background white-colour
			border-color white-colour
			color default-colour
			
	&.action-box-form
		text-align left
		padding 40px
		
		form
			.form-input
				border-color white-colour
				color white-colour
				+input-placeholder()
					color #E5E5E5
				
				&:focus
					border-color secondary-colour !important
			
			.form-submit
				background secondary-colour
				border-color secondary-colour
				
				&:hover
					background white-colour
					border-color white-colour
					color default-colour

	.heading
		color white-colour
		margin-bottom 15px
		font-size 2em
		
	.content
		color white-colour
		margin 0 0 20px



