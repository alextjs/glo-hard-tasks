	font-size 1em

h6
.h6
	font-size 0.8em

.headline
	font-size 2.6em
	margin 0 0 20px

.subheading
	font-size: calc(1.8em + 0.390625vw);
	letter-spacing: 1px
	line-height: 1.4em

.subheading-primary
	font-size: calc(1.5em + 0.390625vw);
	line-height: 160%


p
.content
	color: white-colour
	font-size: 1.2em

// Text Colours
.f-c-default
	color default-colour

.f-c-primary
	color primary-colour
	
.f-c-secondary
	color secondary-colour

.f-c-white
	color white-colour

// Text Wieghts
.f-w-bold
	font-weight 700
	
.f-w-light
	font-weight 300
	
// Text Style
.f-s-italic
	font-style italic

.f-s-normal
	font-style normal
	
// Text Aligns
.t-a-r
	text-align right
	
.t-a-l
	text-align left

.t-a-c
	text-align center
	
.t-a-j
	text-align justify

// Text Transforms
.t-t-l
	text-transform lowercase

.t-t-u
	text-transform uppercase

.t-t-c
	text-transform capitalize

*:first-child{
  margin-top: 0;
}
*:last-child{
  margin-bottom: 0;
}