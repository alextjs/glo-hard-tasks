@media only screen and (max-width: 991px)
	.menu-toggle
		height 50px
		width 50px
		float right
		background default-colour
		color white-colour
		line-height 55px
		text-align center
		font-size 20px
		
		&:hover
			background primary-colour
			color white-colour
	
	.main-header
		padding 15px
		background default-colour
		box-shadow 0 0 15px 0 rgba(0, 0, 0, 0.15)
		
		position fixed
		width 100%
		top 0
		left 0
		z-index 999

		a
			color: white-colour
			&:hover
				color: default-colour
				border-bottom: 0
				background: grey-colour
				

		.logo
			padding 0
			height 50px
			width auto

	.primary-navigation
		position fixed
		padding 0
		left 0
		width 100%
		top 80px
		height calc(100% - 80px)
		overflow scroll
		display none
		
		ul
			float none
			
			li
				display block
				width 100%
				float none
				line-height 60px
				
				&.menu-item-has-children
					margin-top 0
					position relative

					a
						&:after
							display none
					
					.arrow
						display block
						position absolute
						right 0
						width 60px
						height 60px
						line-height 67px
						top 0
						font-size 18px
						text-align center
						transition 0.6s
						z-index 999
						
						i
							margin-right 0
							color inherit
							
				a
					padding 0
					display block
				
				.sub-menu
					position static
					left auto
					padding-top 0
					width 100%
					display none
					box-shadow none
					
					li
						line-height 60px
						border none
						
						a
							padding 0
							background transparent
							color inherit
							
							&:hover
								background default-colour
		
		&.mobile-default
			background white-colour
			text-align center
			
			ul
				li
					&.menu-item-has-children
						.arrow
							background secondary-colour
							color white-colour
							
							&:hover
								background primary-colour
					
					&:nth-child(2n)
						background grey-colour
						
						a
							color: default-colour
						
						.sub-menu li
							background white-colour
							
							.sub-menu li
								background grey-colour

					&:nth-child(2n + 1)
						background default-colour
							
						.sub-menu li
							background grey-colour
							
							.sub-menu li
								background white-colour

					a
						&:hover
							background default-colour
							color white-colour
		
		&.mobile-overlay
			background rgba(0, 0, 0, 0.95)
			text-align center
			
			ul
				li
					&.menu-item-has-children
						.arrow
							color default-colour

					a
						color white-colour
						
						&:hover
							color default-colour
						
					.sub-menu
						li
							a
								color #959595

								&:hover
								&:focus
									background transparent
									color default-colour

@media only screen and (min-width: 991px)
	.primary-navigation
		display block !important
		
		ul
			li
				.sub-menu
					display block !important